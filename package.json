  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "start": "npm run build && node ./build/index.js",
    "build": "rm -rf ./build/ && tsc",
    "lint": "eslint . --ext .ts",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up -d",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:test": "DOTENV_CONFIG_PATH=.env.test node -r dotenv/config ./node_modules/.bin/prisma migrate deploy",
    "test": "npm run migrate:test && DOTENV_CONFIG_PATH=.env.test node -r dotenv/config ./node_modules/.bin/jest -i --coverage"
  },
  "keywords": [],
